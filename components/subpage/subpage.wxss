.mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 999;
}

.container {
    color: white;
    width: 80%;
    height: 60%;
    background-color: #444;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(128, 0, 0, 0.1);
    overflow: hidden;
    display: flex;
    flex-direction: column;
}

.header {
    padding: 10px 20px;
    background-color: #333;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #ddd;
}

.title {
    font-size: 18px;
    font-weight: bold;
}

.btn_close {
    font-size: 20px;
    color: #999;
    cursor: pointer;
}

.content {
    flex: 1;
    padding: 20px;
    overflow-y: auto;
}