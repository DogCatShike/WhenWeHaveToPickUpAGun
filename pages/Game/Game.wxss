.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
}

.bg {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: -1;
    opacity: 0.8;
}

.game {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: rgba(0, 0, 0, 0.3);
    z-index: 0;
}

.txt_plot {
    position: absolute;
    top: 25%;
    left: 5%;
    right: 5%;
    background: rgba(0, 0, 0, 0.8);
    color: #fff;
    padding: 40rpx;
    border-radius: 24rpx;
    font-size: 36rpx;
    line-height: 1.6;
    box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.3);
    z-index: 2;
}

.btn_continue {
    position: absolute;
    bottom: 15%;
    left: 10%;
    right: 10%;
    width: 80%;
    height: 100rpx;
    line-height: 70rpx;
    background: rgba(0, 0, 0, 0.8);
    color: white;
    font-size: 36rpx;
    border-radius: 50rpx;
    box-shadow: 0 4px 8px rgba(64, 0, 0, 0.3);
}

.control {
    position: fixed;
    bottom: 40rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 90%;
    display: flex;
    justify-content: space-between;
    gap: 20rpx;
    /* 行间距 */
    padding: 20rpx;
    background: rgba(255, 255, 255, 0.15);
    border-radius: 24rpx;
    backdrop-filter: blur(10rpx);
}

.btn_control {
    flex: 1;
    height: 120rpx;
    background: rgba(255, 255, 255, 0.2);
    color: white;
    font-size: 36rpx;
    border-radius: 16rpx;
    transition: all 0.3s;
    line-height: 90rpx;
}

.btn_control:active {
    background: rgba(255, 255, 255, 0.3);
    transform: scale(0.95);
}

.hud {
    position: fixed;
    top: 250rpx;
    right: 20rpx;
    padding: 20rpx;
    background: rgba(0, 0, 0, 0.6);
    border-radius: 12rpx;
    min-width: 220rpx;
    display: flex;
    flex-direction: column;
    gap: 8rpx;
}

.hud text {
    display: block;
    width: 100%;
}

.hud_content {
    font-size: 36rpx;
    color: #fff;
}

.hud_content_secondary {
    font-size: 24rpx;
    color: #cccccc;
}

.day {
    position: absolute;
    top: 225rpx;
    left: 50%;
    transform: translateX(-50%);
    z-index: 500;
    font-size: 48rpx;
    font-weight: bold;
    color: rgb(128, 0, 0);
    white-space: nowrap;
}

.btn_back {
    position: fixed;
    top: 250rpx;
    left: 20rpx;
    padding: 16rpx 32rpx;
    max-width: 200rpx;
    background: rgba(255, 255, 255, 0.15);
    color: black;
    border-radius: 40rpx;
    font-size: 28rpx;
    backdrop-filter: blur(10rpx);
    border: 1rpx solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
    z-index: 500;
}

.btn_back:active {
    background: rgba(255, 255, 255, 0.25);
}

.btn_next {
    position: fixed;
    top: 350rpx;
    left: 20rpx;
    padding: 16rpx 32rpx;
    max-width: 200rpx;
    background: rgba(255, 255, 255, 0.15);
    color: black;
    border-radius: 40rpx;
    font-size: 28rpx;
    backdrop-filter: blur(10rpx);
    border: 1rpx solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
    z-index: 500;
}

.btn_next:active {
    background: rgba(255, 255, 255, 0.25);
}

.btn_subpage {
    position: absolute;
    left: 27%;
    bottom: 350rpx;
    font-size: 48rpx;
    font-weight: bold;
    background-color: rgba(0, 0, 0, 0.5);
    color: white;
}

.subpage-population {
    display: flex;
    justify-content: space-between;
    margin-bottom: 60rpx;
}

.population {
    flex: 1;
    text-align: center;
}

.txt-population {
    display: block;
    font-size: 32rpx;
    color: #666;
    margin-bottom: 16rpx;
    margin-top: 100rpx;
}

.num-population {
    font-size: 48rpx;
    font-weight: bold;
    color: #333;
}

.slider-population {
    padding: 0 40rpx;
}

.spit_out {
    display: block;
    font-size: 24rpx;
    color: #bbbbbb;
    margin-top: 30rpx;
}

.subpage-policy {
    padding: 20rpx;
}

.policy {
    display: flex;
    align-items: center;
}

.txt-policy {
    margin-right: 10rpx;
    font-size: 30rpx;
    color: white;
}

.whether-policy {
    width: 40rpx;
    height: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    color: black;
    background-color: rgba(255, 255, 255, 0.5);
    border-radius: 2rpx;
}