.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
}

.header {
    height: 88rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}

.title {
    font-size: 36rpx;
    font-weight: bold;
}

.btn {
    position: absolute;
    right: 300rpx;
    font-size: 50rpx;
    color: #666;
    width: 100rpx;
    height: 100rpx;
    text-align: center;
    line-height: 50rpx;
}

.btn:hover {
    color: red;
}

.content {
    flex: 1;
    padding: 40rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.setting_content {
    width: 90%;
    margin: 20rpx 0;
    padding: 30rpx;
    background: #f5f5f5;
    border-radius: 12rpx;
    font-size: 28rpx;
    color: #333;
    text-align: left;
}

.setting_title {
    display: block;
    font-size: 32rpx;
    color: #333;
    margin-bottom: 30rpx;
}

.volume {
    display: block;
    text-align: right;
    color: #888;
    font-size: 28rpx;
    margin-top: 20rpx;
}

.login {
    display: flex;
    align-items: center;
    min-height: 100rpx;
}

.avatar {
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
    outline: #333 solid 2rpx;
}

.avatar_text {
    font-size: 28rpx;
    color: rgba(255, 0, 0, 0.5);
    position: absolute;
    bottom: 400rpx;
    left: 50rpx;
}

.nickname {
    flex: 1;
    color: #666;
    font-size: 28rpx;
}

.btn_setting {
    width: 100%;
    height: 100rpx;
    margin: 40rpx 0;
    border-radius: 50rpx;
    font-size: 34rpx;
    background-color: green;
    color: white;
    transition: all 0.3s;
    line-height: 70rpx;
}

.btn_setting:hover {
    background-color: rgb(0, 100, 0);
    box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.3);
}

.spit_out {
    display: block;
    font-size: 32rpx;
    color: #bbbbbb;
    margin-bottom: 30rpx;
}