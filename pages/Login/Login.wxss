/* Login */
.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
}

.bg {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: -1;
    opacity: 0.8;
}

.title {
    font-size: 60rpx;
    font-weight: bold;
    color: black;
    text-shadow: 2rpx 2rpx 4rpx rgba(30, 20, 0, 0.5);
    margin-top: 300rpx;
}

.btn_login_all {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 70%;
}

.btn_login {
    width: 100%;
    height: 100rpx;
    margin: 40rpx 0;
    border-radius: 50rpx;
    font-size: 34rpx;
    color: black;
    transition: all 0.3s;
    line-height: 70rpx;
}

.btn_login:hover {
    background-color: #888888;
    box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.3);
}

.footer {
    position: absolute;
    bottom: 30rpx;
    font-size: 24rpx;
    color: rgb(200, 180, 0);
    text-decoration: underline;
}

.footer:hover {
    color: rgb(130, 120, 0);
}