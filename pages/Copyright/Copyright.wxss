.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
}

.header {
    height: 88rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}

.title {
    font-size: 36rpx;
    font-weight: bold;
}

.btn {
    position: absolute;
    right: 300rpx;
    /* transform: translateY(-50%); */
    font-size: 50rpx;
    color: #666;
    width: 100rpx;
    height: 100rpx;
    text-align: center;
    line-height: 50rpx;
}

.btn:hover {
    color: red;
}

.content {
    flex: 1;
    padding: 40rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.copyright-content {
    width: 90%;
    margin: 20rpx 0;
    padding: 30rpx;
    background: #f5f5f5;
    border-radius: 12rpx;
    font-size: 28rpx;
    color: #333;
    text-align: left;
}

.map {
    width: 100%;
    height: 400rpx;
    margin-top: auto;
}

.footer {
    margin-top: 30rpx;
    font-size: 30rpx;
    font-weight: bold;
}